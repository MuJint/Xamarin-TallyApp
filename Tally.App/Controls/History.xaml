                                   BackgroundColor="Blue"
                                   VerticalTextAlignment="Center"
                                   Text="PanGestureRecognizer1"></Label>
                            <Button Text="删除"
                                    HorizontalOptions="EndAndExpand" />
                        </StackLayout>
                    </Frame>
                </local:PanContainerMethod>
                <local:PanContainerMethod>
                    <Frame BorderColor="Red"
                           TranslationX="0"
                           Margin="0,0,-120,0">
