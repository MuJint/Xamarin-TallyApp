                            <Label TextColor="Red"
                                   HorizontalOptions="StartAndExpand"
                                   BackgroundColor="Blue"
                                   VerticalTextAlignment="Center"
                                   Text="PanGestureRecognizer2"></Label>
                            <Button Text="删除"
